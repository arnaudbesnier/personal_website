$(document).ready(function() {
	<% ['facebook', 'twitter', 'google_plus', 'soundcloud',
		'instagram', 'dribbble', 'linkedin', 'github'].each do |network| %>
		$('#<%= network %>_link').mouseover(function() {
			$(this).attr("src", "<%= asset_path("social_networks/#{network}_on.png") %>");
		});
		$('#<%= network %>_link').mouseout(function() {
			$(this).attr("src", "<%= asset_path("social_networks/#{network}_off.png") %>");
		});
	<% end %>

	$('#profile_photo').mouseover(function() {
		$(this).attr("src", "<%= asset_path('face_on.jpg') %>");
	});
	$('#profile_photo').mouseout(function() {
		$(this).attr("src", "<%= asset_path('face_off.jpg') %>");
	});
	$('#panel_links li').click(function() {
		$('#loader_container').toggle();
		$('#main_view').toggle();
	});
})